/* 轮播图 */
.banner swiper{
  height: 420rpx;
  width: 100%;
}
.banner image{
  width: 100%;
  height:420rpx;
}
.banner .swiper-item{
  position: relative;
}
.banner .desc{
  position: absolute;
  background: rgba(241, 215, 196,0.8);
  color:black;
  left: 0;
  bottom: 0;
  right:0;
  padding: 10rpx;
  font-size: 30rpx;
  font-weight: bolder;
  text-align: center;
}
/* 店铺推荐 */
.product-type{
  background-color:#fff;
  padding: 2 2rpx;
  margin-top: 10rpx;
  display: flex;
}

.product1{
  width: 25%;
  text-align: center;
}
.product1 image{
  width:170rpx;
  height: 130rpx;
  border-radius: 10rpx;
  border: 3rpx solid #767676;
}
.name{
  font-size: 21rpx;
}
/* 占位 */
.konjian{
  height: 20rpx;
  width: 100%;
}
.comm{
  text-align: center;
  font-size: 45rpx;
  font-weight:bolder;
}
/* 列表 */
.list{
  padding:0 20rpx;
}
.item{
  border-bottom: 2rpx solid #767676;
  position: relative;
}
.img image{
  width:210rpx;
  height:130rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  border: 3rpx solid #767676;
}
.info{
  padding-left: 25rpx;
  color:black;
  font-size:26rpx;
}
.dianpu{
  margin-top: 20rpx;
  color:red;
